{% extends 'base.html.twig' %} {% block title %}Connexion{% endblock %} {%
block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

{% if error %}

<div>{{error.messageKey}}</div>


{% endif %}

<div class="example-wrapper container-fluid row">
  <h1 class="mt-5">Une connexion incroyablement dynamique!</h1>

  <p class="mt-3">Pour des bénévoles incroyables et dynamiques !</p>
  <div class="row d-flex flex-column">
    <form action="{{path('app_connexion')}}" method="post">

      <div class="d-flex justify-content-evenly my-3">
      <label for="email">Email : </label>
      <input type="text" id="email" name="_username" value=""{{username}}>
      </div>


      <div class="d-flex justify-content-evenly my-3">
      <label for="password">Mot de passe : </label>
      <input type="password" id="password" name="_password">
      </div>

      <div class="d-flex justify-content-evenly my-3">
      <button class="btn btn-dark mx-5">Connexion</button>
        </div>
    </form>

  </div>
</div>
{% endblock %}

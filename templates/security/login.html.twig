{% extends 'base.html.twig' %} {% block title %}Engagez vous !{% endblock %} {%
block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px/1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

<div class="example-wrapper container-fluid row">
  <h1 class="mt-5">Inscription heureuse et bienveillante !</h1>

  <p class="mt-3">Pour du bénévolat heureux et bienveillant !</p>
  <div class="col-10 d-flex justify-content-around">
    {{ form_start(form) }}
    <div class="my-3">{{ form_row(form.pseudonyme) }}</div>
    <div class="my-3">{{ form_row(form.password) }}</div>
    <div class="my-3">{{ form_row(form.email) }}</div>
    <div class="my-3">{{ form_row(form.numero) }}</div>

    <button class="btn btn-dark my-5">Envoyer tout ça !</button>

    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
